<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Category -->
    <record id="module_category_estate" model="ir.module.category">
        <field name="name">Inmobiliaria</field>
        <field name="visible" eval="True"/>
    </record>

    <record id="module_category_estate_management" model="ir.module.category">
        <field name="name">Inmobiliaria</field>
        <field name="parent_id" ref="module_category_estate"/>
        <field name="visible" eval="True"/>
    </record>

    <!-- Groups -->
    <record id="group_property_manager" model="res.groups">
        <field name="name">Manager de Propiedades</field>
        <field name="category_id" ref="module_category_estate_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <record id="group_property_seller" model="res.groups">
        <field name="name">Vendedor de Propiedades</field>
        <field name="category_id" ref="module_category_estate_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

</odoo>