<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formulario de vista de propiedades -->
    <record id="estate_property_view_tree_custom" model="ir.ui.view">
        <field name="name">estate.property.view.tree.custom</field>
        <field name="model">estate.property</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Propiedades">
                <field name="name" string="Título"/>
                <field name="tag_ids" string="Etiquetas" widget="many2many_tags"/>
                <field name="postcode" string="Código Postal"/>
                <field name="bedrooms" string="Habitaciones"/>
                <field name="living_area" string="Superficie cubierta"/>
                <field name="expected_price" string="Precio esperado"/>
                <field name="selling_price" string="Precio de venta"/>
                <field name="date_availability" string="Fecha disponibilidad"/>
            </list>
        </field>
    </record>

    <!-- Formulario de creacion de propiedades -->
    <record id="estate_property_view_form_custom" model="ir.ui.view">
        <field name="name">estate.property.view.form.custom</field>
        <field name="model">estate.property</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Propiedad">
                <header>
                    <button name="action_cancel" string="Cancelar" type="object" class="oe_highlight" invisible="state not in ('new', 'offer_received', 'offer_accepted')"/>
                    <button name="action_sold" string="Marcar como vendida" type="object" class="oe_highlight" invisible="state != 'offer_accepted'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" placeholder="Nombre propiedad"/>
                    </h1>
                    <group>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <group>
                            <field name="property_type_id" string="Tipo Propiedad"/>
                            <field name="postcode" string="Código Postal"/>
                            <field name="date_availability" string="Fecha disponibilidad"/>
                        </group>
                        <group>
                            <field name="expected_price" string="Precio esperado"/>
                            <field name="selling_price" string="Precio de venta"/>
                            <field name="best_offer" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detalles">
                            <group>
                                <field name="description" string="Descripción"/>
                                <field name="bedrooms" string="Habitaciones"/>
                                <field name="facades" string="Fachadas"/>
                                <field name="garage" string="Garage"/>
                                <field name="living_area" string="Superficie cubierta"/>
                            </group>
                        </page>
                        <page string="Areas">
                            <group>
                                <field name="garden_area" string="Superficie del jardín"/>
                                <field name="living_area" string="Superficie cubierta"/>
                                <field name="total_area" readonly="1"/>
                            </group>
                        </page>
                        <page string="Gardín">
                            <group>
                                <field name="garden" string="Jardín"/>
                                <field name="garden_area" string="Superficie del jardín"/>
                                <field name="garden_orientation" string="Orientación del jardín"/>
                            </group>
                        </page>
                        <page string="Más info.">
                            <group>
                                <field name="buyer_id" string="Comprador"/>
                                <field name="salesman_id" string="Vendedor"/>
                            </group>
                        </page>
                        <page string="Ofertas">
                            <field name="offer_ids" domain="[]"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Formulario de busqueda de propiedades -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Propiedades">
                <field name="name" string="Título"/>
                <field name="postcode" string="Código Postal"/>
                <field name="expected_price" string="Precio esperado"/>
                <field name="bedrooms" string="Habitaciones"/>
                <field name="living_area" string="Superficie cubierta"/>
                <field name="facades" string="Fachadas"/>
                <field name="state" string="Estado"/>
                <filter string="Mis Propiedades" name="my_properties" domain="[('create_uid', '=', uid)]"/>
                <filter string="Propiedades Disponibles" name="available_properties" domain="[('state', 'in', ('new', 'offer_received'))]"/>
                <group string="Agrupar por">
                    <filter string="Creado por" name="group_by_create_uid" context="{'group_by': 'create_uid'}"/>
                    <filter string="Mes de Creación" name="group_by_create_date" context="{'group_by': 'create_date:month'}"/>
                    <filter string="Código Postal" name="group_by_postcode" context="{'group_by': 'postcode'}"/>
                    <filter string="Estado" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Formulario de accion de propiedades -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Propiedades</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="estate_property_view_search"/>
        <field name="view_id" ref="estate_property_view_tree_custom"/>
    </record>
</odoo>