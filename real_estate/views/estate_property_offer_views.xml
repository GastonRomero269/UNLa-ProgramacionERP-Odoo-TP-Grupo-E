<odoo>
    <!-- Formulario de vista de ofertas de propiedades -->
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.view.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list>
                <field name="partner_id"/>
                <field name="price"/>
                <field name="status"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="property_type_id"/>
            </list>
        </field>
    </record>

    <!-- Formulario de creacion de ofertas de propiedades -->
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_accept_offer" string="Aceptar Oferta" type="object" class="oe_highlight" invisible="status == 'accepted'" confirm="¿Estás seguro de aceptar esta oferta?"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="date_deadline" string="Fecha límite"/>
                        <field name="partner_id" string="Ofertante"/>
                        <field name="price" string="Precio"/>
                        <field name="property_id" string="Propiedad"/>
                        <field name="property_type_id" string="Tipo de Propiedad"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Formulario de busqueda de ofertas de propiedades -->
    <record id="estate_property_offer_view_search" model="ir.ui.view">
        <field name="name">estate.property.offer.view.search</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="price"/>
                <field name="status"/>
                <field name="property_id"/>
                <field name="property_type_id"/>
                <group expand="1" string="Agrupar por">
                    <filter name="group_by_property_type" string="Tipo de Propiedad" domain="[]" context="{'group_by': 'property_type_id'}"/>
                    <filter name="group_by_status" string="Estado" domain="[]" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Formulario de accion de ofertas de propiedades -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Ofertas</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="estate_property_offer_view_list"/>
    </record>
</odoo>